<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <chilijie.baway.com.gotopscrollviewlibrary.GoTopScrollview
        android:id="@+id/gts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:descendantFocusability="blocksDescendants"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="御泥坊VIP商城"
                android:textSize="17sp"
                android:textColor="#FB90A5"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
            <ImageView
                android:id="@+id/home_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xiaoxi"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                />
        </RelativeLayout>
        <com.stx.xhb.xbanner.XBanner
            android:id="@+id/xb"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:AutoPlayTime="3000"
            app:pointsPosition="RIGHT"
            app:pointLeftRightPadding="7dp"
            app:pointTopBottomPadding="7dp"
            app:pointSelect="@drawable/point_select"
            app:pointNormal="@drawable/point_normal"
            >

        </com.stx.xhb.xbanner.XBanner>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            >
            <com.baway.chilijie.view.MyImgText
                android:id="@+id/mit1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                >

            </com.baway.chilijie.view.MyImgText>
            <com.baway.chilijie.view.MyImgText
                android:id="@+id/mit2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                >

            </com.baway.chilijie.view.MyImgText>
            <com.baway.chilijie.view.MyImgText
                android:id="@+id/mit3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp">

            </com.baway.chilijie.view.MyImgText>
            <com.baway.chilijie.view.MyImgText
                android:id="@+id/mit4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                >

            </com.baway.chilijie.view.MyImgText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:background="#FFFFFF"
            >
            <TextView
                android:id="@+id/home_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:text="我我我"
                />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scrollbars="none"
                >
                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:background="#FFFFFF"
            android:clipChildren="false"
            android:layerType="software"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:text="—  优惠活动  —"
                />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp"
                android:layout_width="300dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:clipChildren="false"
                >

            </android.support.v4.view.ViewPager>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:background="#FFFFFF"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:text="—  热门专题  —"
                />
            <ListView
                android:id="@+id/home_lv"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:divider="@null"

                >

            </ListView>

        </LinearLayout>
        <GridView
            android:id="@+id/home_gv"
            android:layout_width="match_parent"
            android:layout_height="1050dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:numColumns="2"
            >

        </GridView>

    </LinearLayout>
    </chilijie.baway.com.gotopscrollviewlibrary.GoTopScrollview>
    </android.support.v4.widget.SwipeRefreshLayout>
    <ImageView
        android:id="@+id/iv_totop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ico_goto_top"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:visibility="gone"
        />
</RelativeLayout>